{
  "schema_version": 1,
  "description": "Third-party upstream sources tracked for archive download (no git clone).",
  "libraries": {
    "flac": {
      "module": "flac",
      "repo": "xiph/flac",
      "channel": "release",
      "default_archive": "tar.gz",
      "notes": "Header/lib wrapper module; validate integration after update."
    },
    "freetype": {
      "module": "freetype",
      "repo": "freetype/freetype",
      "channel": "release",
      "default_archive": "tar.gz",
      "sync": {
        "clean": ["src", "include"],
        "copy": [
          {
            "from": "src",
            "to": "src"
          },
          {
            "from": "include",
            "to": "include"
          }
        ]
      }
    },
